<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Movie</title>
</head>

<!-- Terminar validaciones y mostrar errores -->

<body>
    <div>
        <h1>Add Movie</h1>
        <div class="show-errors">
            <% if (typeof errors != 'undefined') { %>
             <p style="color: red">ERROR</p>
             <ul>
                <% errors.forEach(error => { %>
                    <li>
                        <%= error.msg %> 
                    </li>
                <% }) %>
             </ul>
            <% } %>
        </div>
        <form action="/movies/add" method="POST">
            <div>
                <label for="title">Title:</label>
                <input type="text" name="title" id="title">
            </div><br>
            <div>
                <label for="rating">Rating:</label>
                <input type="text" name="rating" id="rating">
            </div><br>
            <div>
                <label for="awards">Awards:</label>
                <input type="text" name="awards" id="awards">
            </div><br>
            <div>
                <label for="release_date">Release date:</label>
                <input type="date" name="release_date" id="release_date" value="2020-07-18">
            </div><br>
            <div>
                <label for="length">Length:</label>
                <input type="text" name="length"id="length">
            </div><br>
            <div>
                <label for="genre_id">Genre:</label>
                <select name="genre_id" id="genre_id">
                    <option value="">Select a genre</option>
                    <% genres.forEach(genre => { %>
                        <option value="<%= genre.id %> ">
                            <%= genre.name %> 
                        </option>
                    <% }) %>
                    
                </select>
            </div><br>
            <div>
                <button type="submit">Add Movie</button>
            </div><br>
        </form>
    </div>
    <br>

    <%- include('moviesPartials/searchForm.ejs') %>
    <br>
    <a href="/movies"><button type="">Back to Movies List</button></a>
    <br><br>   
</body>

</html>